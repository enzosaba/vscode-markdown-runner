{
  "name": "markdown-python-code-runner",
  "displayName": "Markdown Python Code Runner",
  "description": "Enables seamless execution of Python code blocks within Markdown files in VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/renathossain/markdown-python-code-runner.git"
  },
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Markdown Python Code Runner",
      "properties": {
        "markdownPythonCodeRunner.compilerConfiguration": {
          "type": "object",
          "description": "Compiler configuration for supported languages in Markdown files",
          "default": {
            "python": {
              "language": "Python",
              "extension": "py",
              "compiler": "python"
            },
            "c": {
              "language": "C",
              "extension": "c",
              "compiler": "gcc"
            },
            "java": {
              "language": "Java",
              "extension": "java",
              "compiler": "javac"
            },
            "cpp": {
              "language": "C++",
              "extension": "cpp",
              "compiler": "g++"
            },
            "rust": {
              "language": "Rust",
              "extension": "rs",
              "compiler": "rustc"
            },
            "typescript": {
              "language": "TypeScript",
              "extension": "ts",
              "compiler": "npx ts-node"
            },
            "php": {
              "language": "PHP",
              "extension": "php",
              "compiler": "php"
            },
            "perl": {
              "language": "Perl",
              "extension": "pl",
              "compiler": "perl"
            },
            "r": {
              "language": "R",
              "extension": "r",
              "compiler": "Rscript"
            },
            "dart": {
              "language": "Dart",
              "extension": "dart",
              "compiler": "dart"
            },
            "groovy": {
              "language": "Groovy",
              "extension": "groovy",
              "compiler": "groovy"
            },
            "go": {
              "language": "Go",
              "extension": "go",
              "compiler": "go run"
            },
            "haskell": {
              "language": "Haskell",
              "extension": "hs",
              "compiler": "runhaskell"
            },
            "julia": {
              "language": "Julia",
              "extension": "jl",
              "compiler": "julia"
            },
            "lua": {
              "language": "Lua",
              "extension": "lua",
              "compiler": "lua"
            },
            "ruby": {
              "language": "Ruby",
              "extension": "rb",
              "compiler": "ruby"
            },
            "javascript": {
              "language": "JavaScript",
              "extension": "js",
              "compiler": "node"
            },
            "bash": {
              "language": "Bash",
              "extension": "sh",
              "compiler": "bash"
            }
          }
        }
      }
    }
  },  
  "scripts": {
    "build": "vsce package",
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  }
}
